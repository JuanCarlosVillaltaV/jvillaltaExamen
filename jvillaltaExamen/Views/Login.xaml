<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jvillaltaExamen.Views.Login"
             Title="Login">
    <VerticalStackLayout>
        
        <Label 
        Text="Login"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" 
            WidthRequest="250" />


        <Label Text="Login" 
           FontSize="32" 
           HorizontalOptions="Center"/>

        <Entry x:Name="txtUsuario" 
           Placeholder="Usuario" />

        <Entry x:Name="txtContraseña" 
           Placeholder="Contraseña"
           IsPassword="True" />

        <Button x:Name="btnIniciar"
            Text="Iniciar Sesión" 
            Clicked="btnIniciar_Clicked"/>
            

        <Label x:Name="ResultLabel" 
           Text=""
           HorizontalOptions="Center" 
           TextColor="Red"/>
        

    </VerticalStackLayout>
</ContentPage>